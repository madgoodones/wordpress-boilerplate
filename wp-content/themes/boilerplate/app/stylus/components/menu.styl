// vars
$menu_gray = #464646
$menu_red = #c94854
// css
.menu
	transition(.5s all ease-in-out)
	position fixed
	z-index 2
	top 0
	right 0
	left 0
	background-color $white

	+above(1170px)
		background-color $white
		
	&__brand
		margin rem(10px 0)
		img
			max-height rem(50px)

	&__checked
		visibility hidden
		display none

		&:checked ~ .menu__nav
			top 70px
			opacity 1
			visibility visible
			background-color $white

		&:checked ~ .menu__burger
			padding 18px 7px 22px 7px

			.menu__burger__btn
				height 0
				&:after, &:before
					top 0
				&:after
					transform(rotate(45deg))
				&:before
					transform(rotate(-45deg))

	&__burger
		position absolute
		display block
		top 15px
		right 15px
		padding 18px 7px
		margin 0
		cursor pointer
		background-color $menu_red
		+above(1170px)
			visibility hidden
			display none

		&__btn
			transition(.5s all ease-in-out)
			position relative
			display block
			width 40px
			height 5px
			border-radius 5px
			background-color $white
			border 0
			outline 0
			&:after, &:before
				transition(.5s all ease-in-out)
				position absolute
				content ''
				left 0
				right 0
				height 5px
				border-radius 5px
				top 8px
				background-color $white
			&:before
				top -8px

	&__nav
		position fixed
		overflow hidden
		top -100%
		right 0
		left 0
		z-index -1
		opacity 0
		visibility hidden
		padding 10px

		ul
			margin 0
			padding 0
			text-align center

		li
			list-style none

			a
				transition(.3s all ease-in-out)
				display block
				padding rem(5px)
				color $menu_gray
				font-size rem(20px)
				font-weight 700
				letter-spacing .7px
				text-transform uppercase
				outline 0
				cursor pointer
				&:hover
				&:focus
					position relative
					color $menu_red
					text-decoration none
					border-radius 5px
					outline 0

				+above(1170px)
					font-size 18px
					padding rem(11px 24px)
					&:before
						transition(.3s all ease-in-out)
						content ''
						position absolute
					&:hover
					&:focus
						&:before
							content ''
							position absolute
							left 50%
							bottom 5px
							height 3px
							width 30px
							margin-left -15px
							background-color $menu_red
			&.active
				a
					position relative
					color $menu_red
					text-decoration none
					border-radius 5px
					outline 0
					+above(1170px)
						&:before
							content ''
							position absolute
							left 50%
							bottom 5px
							height 3px
							width 30px
							margin-left -15px
							background-color $menu_red
						
		+below(1169px)
			transition(.5s all ease-in)

		+above(1170px)
			position static
			opacity 1
			visibility visible

			ul
				text-align right

			li
				display inline-block
