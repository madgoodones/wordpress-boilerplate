// vars
$menu_blue = #009cde
// css
.menu
	transition(.5s all ease-in-out)
	position fixed
	z-index 5
	top 0
	right 0
	left 0
	padding 0
	background-color $white
	+above(1170px)
		padding rem(10px 0)
	&.active
		padding 0
		background-color $white
		
	&__brand
		margin rem(10px 0)

	&__checked
		visibility hidden
		display none

		&:checked ~ .menu__nav
			top 68px
			opacity 1
			visibility visible
			background-color $white
			+above(1170px)
				background-color transparent

		&:checked ~ .menu__burger
			padding 18px 7px 22px 7px

			.menu__burger__btn
				height 0
				&:after, &:before
					top 0
				&:after
					transform(rotate(45deg))
				&:before
					transform(rotate(-45deg))

	&__burger
		position absolute
		display block
		top 12px
		right 15px
		padding 18px 7px
		margin 0
		cursor pointer
		background-color transparent
		+above(1170px)
			visibility hidden
			display none

		&__btn
			transition(.5s all ease-in-out)
			position relative
			display block
			width 40px
			height 5px
			border-radius 5px
			background-color $black
			border 0
			outline 0
			&:after, &:before
				transition(.5s all ease-in-out)
				position absolute
				content ''
				left 0
				right 0
				height 5px
				border-radius 5px
				top 10px
				background-color $menu_blue
			&:before
				top -10px
				background-color $menu_blue

	&__nav
		position fixed
		top -100%
		right 0
		left 0
		z-index -1
		opacity 0
		visibility hidden
		padding rem(11px)

		ul
			margin 0
			padding 0
			text-align right
			&.dropdown-menu 
				li
					width 100%
					padding rem(3px 10px)
					+above(1170px)
						text-align left
					a
						display block
						padding rem(15px 5px)
						color $black
				& > .active > a
					background-color #ebebeb
					&:hover
					&:focus
						background-color #ebebeb

		li
			list-style none

			a
				transition(.3s all ease-in-out)
				position relative
				display block
				padding rem(5px)
				color $black
				font-size rem(18px)
				font-weight 400
				text-transform uppercase
				outline 0
				cursor pointer
				&:hover
				&:focus
					position relative
					text-decoration none
				+above(1170px)
					padding rem(16px 5px)
					font-size 13px
					color $black
					
			&.button-phone
				position relative
				margin rem(9px 0 0)
				border 1px solid $black
				a
					display inline-block
					position relative
					padding rem(5px 15px 5px 35px)
					&:hover
					&:focus
						&:after
							size: 0px
					&:before
						position absolute
						top 11px
						left 15px
						content '\f095'
						font: normal normal normal 14px/1 FontAwesome;
						-webkit-font-smoothing: antialiased;
						-moz-osx-font-smoothing: grayscale;
						font-size rem(16px)
						
		+below(1169px)
			transition(.5s all ease-in)

		+above(1170px)
			position static
			opacity 1
			visibility visible
			li
				display inline-block
				
				a:hover,
				a:focus
					&:after
						content ''
						position absolute
						bottom 10px
						left 5px
						width 15px
						height 2px
						background-color $menu_blue				

				&.button-phone
					border 1px solid transparent
					float right
					a:before
						top 8px
						font-size rem(14px)
				
	.brand
		display none
		opacity 0
		visibility hidden
		
	+below(1170px)
		.brand
			display block
			opacity 1
			visibility visible
			&-white
				display none
				opacity 0
				visibility hidden
							
	&.active
		
		.menu__nav li a
			color $black
				
		.menu__nav li.active a
			color $menu_blue
			+above(1170px)
				color $black
				&:after
					content ''
					position absolute
					bottom 10px
					left 5px
					width 15px
					height 2px
					background-color $menu_blue
			
		.menu__nav li.button-phone
			border 1px solid $black
			a
				color $menu_blue
		
		.brand
			display block
			opacity 1
			visibility visible
			
		.brand-white
			display none
			opacity 0
			visibility hidden	
