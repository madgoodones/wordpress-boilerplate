$story_blue = #0b2e4a

.storytelling
	position relative
	height 450px
	padding rem(25px 0)
	font-size rem(36px)
	color $white
	text-align center
	text-transform uppercase
	background-color $story_blue
	.title,h1,h2,h3,h4,h5,h6
		font-size rem(32px)
		line-height 1.3
	&--blue
		height 100%
		padding rem(70px 0 85px)
		font-size rem(26px)
		font-weight 700
		color #5797bf
		text-transform none
		background-color #0b2e4a
		&:before
			content ''
			position absolute
			width 100%
			height 100%
			top 0
			right 0
			overflow hidden
			border-bottom 30px solid #f4ebdd
			border-top 0px solid transparent
			border-left 1920px solid transparent
			border-right 0 solid transparent
			
		.title,h1,h2,h3,h4,h5,h6
			font-size rem(26px)
			font-weight 700