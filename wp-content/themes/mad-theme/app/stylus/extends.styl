// Todo e qualquer estilo que poderá ser usado por vários elementos
.container
	center(rem(1170px))
	padding rem(0 15px)
	+above(1440px)
		center(rem(1270px))
		padding rem(0 15px)
	
.max-page
	max-width 1920px
	margin 0 auto
	
.bg-parallax
	background-size cover
	background-repeat repeat
	background-position center
	+above(970px)
		background-attachment fixed
		background-position 50% 50%
	
.align-middle
	display table
	width 100%
	height 100%
	table-layout fixed
	.container,
	.middle
		display table-cell
		width 100%
		vertical-align middle
		
for number in 0px 5px 10px 15px 20px 25px 30px 35px 40px 45px 50px 70px 100px
	.padding-{number}
		padding-top number !important
		padding-bottom number !important
	.padding-top-{number}
		padding-top number !important
	.padding-bottom-{number}
		padding-bottom number !important
	.margin-{number}
		margin-top number !important
		margin-bottom number !important
	.margin-top-{number}
		margin-top number !important
	.margin-bottom-{number}
		margin-bottom number !important
		
.uppercase
	text-transform uppercase
	
.relative
	position relative
	overflow hidden
	
.animated-fast
	animation-duration 1s !important
.animated-medium
	animation-duration 2.5s !important
.animated-slow
	animation-duration 5s !important