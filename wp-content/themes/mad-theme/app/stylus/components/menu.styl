// css
.menu
	transition(.5s all ease-in-out)
	fixed: 0 0 auto
	z-index 5
	padding 0
	background-color $white
	&.active
		padding rem(3px 0)
		background-color $white
		
		+below(1024px)
			.menu-container
				fixed: rem(96px) 0 auto
				padding rem(25px)
				background $white
				
	+above(1170px)
		padding rem(10px 0)
		background-color transparent
		
	&-container
		transition .5s all ease-in-out
		+below(1024px)
			fixed: -100% 0 auto
			padding rem(25px)
			background $white
			
	&-hamburger
		padding 0
		text-align right
		+above(1024px)
			display none
			opacity 0
			visibility hidden
		.hamburger
			padding rem(17.5px 0 15px)
			outline none
			&:focus
				outline none
		.hamburger-inner
		.hamburger-inner:before
		.hamburger-inner:after
			background-color $white
		
	&-navigation
		text-align center
			
		> ul
			list-style none
			padding 0
			margin 0
			> li
				display block
				padding rem(5px)
				+above(1024px)
					display inline-block
				> a
					display block
					padding rem(5px)
					font-size rem(17px)
					font-weight 600
					color $black
					text-decoration none
					text-transform uppercase