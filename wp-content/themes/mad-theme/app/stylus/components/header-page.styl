.header-page
	cover()
	display table
	table-layout fixed
	text-align center
	size: 100%, 400px
	
	&-caption
		display table-cell
		vertical-align middle
		padding rem(50px)
		
		.title, h1,h2,h3,h4,h5,h6
			margin rem(60px 0 0)
			font-size rem(32px)
			font-weight 600
			letter-spacing 1.5px
			color $white
			text-transform uppercase