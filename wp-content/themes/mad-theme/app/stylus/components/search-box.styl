.search-box
	center(rem(320px))
	padding rem(5px 5px)
	color $black
	text-align center
	border rem(1px) solid $black
	
	&-label
		padding-right rem(10px)
		border 0
		outline none
		background transparent
	
	&-input
		font-size rem(14px)
		border none
		outline none
		background transparent
		+placeholder()
			color $black